# MysticStars Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

POSTGRES_USER=mysticstars
POSTGRES_PASSWORD=mysticstars_pass_change_me
POSTGRES_DB=mysticstars

# =============================================================================
# Backend API
# =============================================================================

NODE_ENV=production

# Database connection string
# Docker: Use postgres as hostname
POSTGRES_URI=postgresql://mysticstars:mysticstars_pass_change_me@postgres:5432/mysticstars

# AI Service API (required for generating readings)
BLACKBOX_API_KEY=your-blackbox-api-key-here

# Internal API URL (used by cronjob service)
API_BASE_URL=http://api:3000

# Frontend URL for CORS (your public domain)
FRONTEND_URL=https://mysticstars.app

# =============================================================================
# Optional: Telegram Alerts
# =============================================================================

# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-telegram-chat-id
